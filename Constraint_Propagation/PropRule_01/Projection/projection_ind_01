set(ignore_option_dependencies). % GUI handles dependencies

if(Prover9). % Options for Prover9
  assign(max_seconds, 60).
end_if.

if(Mace4).   % Options for Mace4
  assign(max_seconds, 60).
end_if.

formulas(assumptions).

%We present a series of formula showing the effects of constraint propagation for each pair of FOL constraint/RA operator
%Starting with the propagation of an Inclusion Dependency ind=[R1,R2]
%In this case, we remove an attribute from R2

%CONSTRAINT A
%Inclusion Dependency 
all x all y (R1(x,y) -> exists z R2(y,z)).
all y all z (R2(y,z) -> exists x R1(x,y)).

%MAPPINGS A TO B
all x all y (S1(x,y) <->  (R1(x,y))).
all y (S2(y) <-> exists z (R2(y,z))).

end_of_list.

formulas(goals).

((S1(x,y) -> S2(y))
&(S2(y) -> exists x S1(x,y))).

end_of_list.

