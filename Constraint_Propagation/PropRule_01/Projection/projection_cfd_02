set(ignore_option_dependencies). % GUI handles dependencies

if(Prover9). % Options for Prover9
  assign(max_seconds, 60).
end_if.

if(Mace4).   % Options for Mace4
  assign(max_seconds, 60).
end_if.

formulas(assumptions).

%We present a series of formula showing the effects of constraint propagation for each pair of FOL constraint/RA operator
%Starting with the propagation of a conditional functional dependency Y -> Z, Y != cond
%In this case, Y is projected away

%CONSTRAINT A
%Conditional Functional Dependency Y -> Z, Y != cond

all x all y all z all x1 all z1 ((R(x,y,z) & R(x1,y,z1)) & (y != cond) -> z=z1).

%MAPPINGS A TO B
all y all z (S(y,z)<-> (exists x (R(x,y,z)))).

end_of_list.

formulas(goals).

all y all z all z1 ((S(y,z) & S(y,z1)) & (y != cond) -> z=z1).

end_of_list.

